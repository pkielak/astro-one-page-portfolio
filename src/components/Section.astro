---
interface Props {
    id: string;
    navId: string;
    heading?: string;
    subheading?: string;
    backgroundColor?: string;
}

const { id, navId, heading, subheading, backgroundColor } = Astro.props;
---

<section id={id} data-nav-id={navId} class="py-22 lg:py-28">
    {
        (heading || subheading) && (
            <header class="section-header stack gap-2 lg:gap-4">
                {heading && <h3>{heading}</h3>}
                {subheading && <p>{subheading}</p>}
            </header>
        )
    }
    <slot />
</section>

<style
    define:vars={{
        background: backgroundColor || "#fff",
    }}
>
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        gap: 3rem;
        background: var(--background);
        padding-left: 1.5rem;
        padding-right: 1.5rem;
    }

    @media (min-width: 48rem) {
        section {
            gap: 5rem;
        }
    }

    @media (min-width: 62rem) {
        padding-left: 0;
        padding-right: 0;
    }

    .section-header {
        justify-self: center;
        text-align: center;
        max-width: 50ch;
        font-size: var(--text-md);
        color: var(--gray-300);
    }

    .section-header h3 {
        font-size: var(--text-2xl);
    }

    @media (min-width: 48rem) {
        .section-header {
            font-size: var(--text-lg);
        }

        .section-header h3 {
            font-size: var(--text-4xl);
        }
    }
</style>
