---
import Icon from "./Icon.astro";
import Section from "./Section.astro";
import { skills } from "../content.json";
---

<Section
    id="skills"
    navId="skills-nav"
    backgroundColor="rgba(123, 141, 162, 0.5)"
>
    <div class="skills">
        {
            skills.map((skill) => (
                <div class="box stack gap-2 lg:gap-4">
                    <Icon
                        icon="pencil-line"
                        color="var(--accent-regular)"
                        size="2.5rem"
                    />
                    <h2>{skill.name}</h2>
                    <p>{skill.description}</p>
                </div>
            ))
        }
    </div>
</Section>

<style>
    .box {
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        padding: 1.5rem;
        background: var(--card-gradient);
        box-shadow: var(--shadow-sm);
    }

    .skills {
        display: grid;
        gap: 3rem;
        width: 100%;
        max-width: 1024px;
        margin: 0 auto;
    }

    .skills h2 {
        font-size: var(--text-lg);
    }

    .skills p {
        color: var(--gray-400);
    }

    @media (min-width: 48rem) {
        .box {
            border-radius: 1.5rem;
            padding: 2.5rem;
        }

        .box:nth-of-type(1) {
            grid-area: skill1;
        }

        .box:nth-of-type(2) {
            grid-area: skill2;
        }

        .skills {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(5, 1fr);
            grid-template-areas:
                "skill1 ."
                "skill1 ."
                "skill1 skill2"
                ". skill2"
                ". skill2";
            gap: 5rem;
        }

        .skills h2 {
            font-size: var(--text-2xl);
        }
    }
</style>
